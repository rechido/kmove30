<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID"
	version="3.1">
	<display-name>JSP</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<context-param>
		<description>데이터베이스 이름</description>
		<param-name>DB_NAME</param-name>
		<param-value>malldb</param-value>
	</context-param>

	<context-param>
		<description>개발툴 이름</description>
		<param-name>TOOL_NAME</param-name>
		<param-value>eclipse</param-value>
	</context-param>

	<error-page>
		<exception-type>java.lang.NumberFormatException</exception-type>
		<location>/chap05/error/NumberFormatError.jsp</location>
	</error-page>

	<error-page>
		<exception-type>java.lang.ArithmeticException</exception-type>
		<location>/chap05/error/ArithmeticError.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/chap05/error/NotFoundError.jsp</location>
	</error-page>


	<servlet>
		<servlet-name>hundred-servlet</servlet-name>
		<servlet-class>HundredServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>hundred-servlet</servlet-name>
		<url-pattern>/hundred</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>adder-servlet</servlet-name>
		<servlet-class>AdderServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>adder-servlet</servlet-name>
		<url-pattern>/adder</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>bbspost-servlet</servlet-name>
		<servlet-class>BBSPostServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>bbspost-servlet</servlet-name>
		<url-pattern>/bbs-post</url-pattern>
	</servlet-mapping>




	<servlet>
		<servlet-name>personal-info-servlet</servlet-name>
		<servlet-class>PersonInfoServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>personal-info-servlet</servlet-name>
		<url-pattern>/pinfo-result</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>fibonacci-servlet</servlet-name>
		<servlet-class>FibonacciServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>fibonacci-servlet</servlet-name>
		<url-pattern>/fibonacci</url-pattern>
	</servlet-mapping>




	<servlet>
		<servlet-name>ptest-servlet</servlet-name>
		<servlet-class>PersonalityTestServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ptest-servlet</servlet-name>
		<url-pattern>/ptest</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>winners-servlet</servlet-name>
		<servlet-class>WinnersServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>winners-servlet</servlet-name>
		<url-pattern>/winners</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>animal-servlet</servlet-name>
		<servlet-class>AnimalServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>animal-servlet</servlet-name>
		<url-pattern>/animal</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>result-servlet</servlet-name>
		<servlet-class>ResultServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>result-servlet</servlet-name>
		<url-pattern>/result</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>new-adder-servlet</servlet-name>
		<servlet-class>chap05.NewAdderServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>new-adder-servlet</servlet-name>
		<url-pattern>/new-adder</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>data-error-servlet</servlet-name>
		<servlet-class>chap05.DataErrorServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>data-error-servlet</servlet-name>
		<url-pattern>/data-error</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>divider-servlet</servlet-name>
		<servlet-class>chap05.DividerServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>divider-servlet</servlet-name>
		<url-pattern>/divider</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>greeting-servlet</servlet-name>
		<servlet-class>chap06.GreetingServlet</servlet-class>
		<init-param>
			<param-name>FILE_NAME</param-name>
			<param-value>d:\\data\\greeting_log.txt</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>greeting-servlet</servlet-name>
		<url-pattern>/chap06/greeting</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>greeting2-servlet</servlet-name>
		<servlet-class>chap06.GreetingServlet2</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>greeting2-servlet</servlet-name>
		<url-pattern>/chap06/greeting2</url-pattern>
	</servlet-mapping>




	<servlet>
		<servlet-name>menu-jsp</servlet-name>
		<jsp-file>/Menu.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>menu-jsp</servlet-name>
		<url-pattern>/Menu</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>dbname-servlet</servlet-name>
		<jsp-file>/chap06/DBName.jsp</jsp-file>
		<init-param>
			<param-name>DB_NAME</param-name>
			<param-value>kmove30</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>dbname-servlet</servlet-name>
		<url-pattern>/chap06/DBName</url-pattern>
	</servlet-mapping>



	<servlet>
		<servlet-name>serverinfo-servlet</servlet-name>
		<servlet-class>chap06.ServerInfoServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>serverinfo-servlet</servlet-name>
		<url-pattern>/chap06/server-info</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<taglib>
			<taglib-uri>http://localhost:8080/JSP/chap07/math-functions.tld</taglib-uri>
			<taglib-location>/WEB-INF/math-functions.tld</taglib-location>
		</taglib>
	</jsp-config>

</web-app>